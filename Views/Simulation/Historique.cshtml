@model List<OutilRentabilite.Models.ParametresSimulation>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Historique des Simulations";
}

<div class="container py-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                <i class="bi bi-clock-history me-2"></i> Historique des Simulations
            </h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="table-historique" class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Date</th>
                            <th>Produit</th>
                            <th>Montant</th>
                            <th>Durée</th>
                            <th>Revenu</th>
                            <th>Coût</th>
                            <th>Bénéfice</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.DateSimulation.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@item.ProduitFinancier?.Nom</td>
                                <td>@item.Montant.ToString("N0") Ar</td>
                                <td>@item.DureeMois</td>
                                <td>@item.Resultat?.RevenuTotal.ToString("N0") Ar</td>
                                <td>@item.Resultat?.CoutTotal.ToString("N0") Ar</td>
                                <td>@item.Resultat?.BeneficeNet.ToString("N0") Ar</td>
                                <td>
                                    <a class="btn btn-sm btn-outline-info me-1" 
                                       href="@Url.Action("Resultat", "Simulation", new { id = item.Id })">
                                        <i class="bi bi-eye"></i> Voir
                                    </a>

                                    <form asp-action="Supprimer" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button class="btn btn-sm btn-outline-danger" 
                                                onclick="return confirm('Voulez-vous supprimer cette simulation ?')">
                                            <i class="bi bi-trash"></i> Supprimer
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- DataTables CSS & JS -->
    <link rel="stylesheet" 
          href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" 
          href="https://cdn.datatables.net/buttons/2.4.2/css/buttons.bootstrap5.min.css" />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.print.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#table-historique').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    { extend: 'excelHtml5', className: 'btn btn-success btn-sm', text: '<i class="bi bi-file-earmark-excel"></i> Excel' },
                    { extend: 'pdfHtml5', className: 'btn btn-danger btn-sm', text: '<i class="bi bi-file-earmark-pdf"></i> PDF' },
                    { extend: 'print', className: 'btn btn-secondary btn-sm', text: '<i class="bi bi-printer"></i> Imprimer' }
                ],
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/fr-FR.json'
                }
            });
        });
    </script>
}
