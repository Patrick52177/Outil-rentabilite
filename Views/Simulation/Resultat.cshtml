@model OutilRentabilite.Models.ParametresSimulation
@{
    ViewData["Title"] = "Résultat de Simulation";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var typeProduit = ((string)ViewBag.TypeProduit)?.ToLower();
}

@if (Model.Resultat != null)
{
    <div class="container mt-4">
        <!-- Titre et infos produit -->
        <div class="card shadow border-0 mb-4">
            <div class="card-header bg-primary text-white">
                <i class="bi bi-info-circle-fill me-2"></i> Informations sur la simulation
            </div>
            <div class="card-body">
                <p><strong>Produit :</strong> @ViewBag.TypeProduit</p>
                <p><strong>Montant :</strong> @Model.Montant.ToString("N0") Ar</p>
                <p><strong>Durée :</strong> @Model.DureeMois mois</p>
            </div>
        </div>

        <!-- Indicateurs financiers -->
        <div class="row g-3 mb-4">
            <div class="col-md-4 col-6">
                <div class="p-3 bg-light rounded shadow-sm text-center">
                    <i class="bi bi-cash-coin text-success fs-3"></i>
                    <h6 class="mt-2">Revenu total</h6>
                    <strong class="text-success">@Model.Resultat.RevenuTotal.ToString("N0") Ar</strong>
                </div>
            </div>
            <div class="col-md-4 col-6">
                <div class="p-3 bg-light rounded shadow-sm text-center">
                    <i class="bi bi-wallet2 text-danger fs-3"></i>
                    <h6 class="mt-2">Coût total</h6>
                    <strong class="text-danger">@Model.Resultat.CoutTotal.ToString("N0") Ar</strong>
                </div>
            </div>
            <div class="col-md-4 col-6">
                <div class="p-3 bg-light rounded shadow-sm text-center">
                    <i class="bi bi-graph-up-arrow text-primary fs-3"></i>
                    <h6 class="mt-2">Bénéfice net</h6>
                    <strong class="text-primary">@Model.Resultat.BeneficeNet.ToString("N0") Ar</strong>
                </div>
            </div>

            <div class="col-md-3 col-6">
                <div class="p-3 bg-light rounded shadow-sm text-center">
                    <i class="bi bi-percent text-warning fs-3"></i>
                    <h6 class="mt-2">Marge brute</h6>
                    <strong>@Model.Resultat.MargeBrute.ToString("N2") %</strong>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="p-3 bg-light rounded shadow-sm text-center">
                    <i class="bi bi-percent text-warning fs-3"></i>
                    <h6 class="mt-2">Marge nette</h6>
                    <strong>@Model.Resultat.MargeNette.ToString("N2") %</strong>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="p-3 bg-light rounded shadow-sm text-center">
                    <i class="bi bi-pie-chart-fill text-info fs-3"></i>
                    <h6 class="mt-2">ROI</h6>
                    <strong>@Model.Resultat.ROI.ToString("N2") %</strong>
                </div>
            </div>

            @if (typeProduit != "services")
            {
                <div class="col-md-3 col-6">
                    <div class="p-3 bg-light rounded shadow-sm text-center">
                        <i class="bi bi-briefcase-fill text-secondary fs-3"></i>
                        <h6 class="mt-2">ROE</h6>
                        <strong>@Model.Resultat.ROE.ToString("N2") %</strong>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="p-3 bg-light rounded shadow-sm text-center">
                        <i class="bi bi-building text-dark fs-3"></i>
                        <h6 class="mt-2">ROA</h6>
                        <strong>@Model.Resultat.ROA.ToString("N2") %</strong>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="p-3 bg-light rounded shadow-sm text-center">
                        <i class="bi bi-clock-history text-muted fs-3"></i>
                        <h6 class="mt-2">Payback Period</h6>
                        <strong>@Model.Resultat.PaybackPeriod.ToString("N2") mois</strong>
                    </div>
                </div>
            }
        </div>

        <!-- Suggestion -->
        @if (ViewBag.Suggestion != null)
        {
            <div class="alert @((ViewBag.Suggestion?.ToString().Contains("⚠️") ?? false) ? "alert-warning" : "alert-success") shadow-sm">
                <i class="bi bi-lightbulb-fill me-2"></i>
                <strong>Suggestion :</strong> @ViewBag.Suggestion
            </div>
        }

        <!-- Bouton retour -->
        <div class="mt-4">
            <a asp-action="Historique" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle me-1"></i> Retour à l'historique
            </a>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">Aucun résultat trouvé pour cette simulation.</div>
}

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
}
