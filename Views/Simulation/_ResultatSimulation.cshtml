@model OutilRentabilite.Models.ParametresSimulation

@if (Model.Resultat != null)
{
    <div class="card shadow border-0 mb-3">
        <div class="card-header bg-success text-white">
            <i class="bi bi-bar-chart-fill me-2"></i> Résultat de la Simulation
        </div>
        <div class="card-body">
            <div class="row text-center g-3">
                <div class="col-md-4 col-6">
                    <div class="p-3 bg-light rounded shadow-sm">
                        <i class="bi bi-cash-coin text-success fs-3"></i>
                        <h6 class="mt-2">Revenu total</h6>
                        <strong class="text-success">@Model.Resultat.RevenuTotal.ToString("N0") Ar</strong>
                    </div>
                </div>
                <div class="col-md-4 col-6">
                    <div class="p-3 bg-light rounded shadow-sm">
                        <i class="bi bi-wallet2 text-danger fs-3"></i>
                        <h6 class="mt-2">Coût total</h6>
                        <strong class="text-danger">@Model.Resultat.CoutTotal.ToString("N0") Ar</strong>
                    </div>
                </div>
                <div class="col-md-4 col-6">
                    <div class="p-3 bg-light rounded shadow-sm">
                        <i class="bi bi-graph-up-arrow text-primary fs-3"></i>
                        <h6 class="mt-2">Bénéfice net</h6>
                        <strong class="text-primary">@Model.Resultat.BeneficeNet.ToString("N0") Ar</strong>
                    </div>
                </div>

                <div class="col-md-3 col-6">
                    <div class="p-3 bg-light rounded shadow-sm">
                        <i class="bi bi-percent text-warning fs-3"></i>
                        <h6 class="mt-2">Marge nette</h6>
                        <strong>@Model.Resultat.MargeNette.ToString("F2") %</strong>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="p-3 bg-light rounded shadow-sm">
                        <i class="bi bi-pie-chart-fill text-info fs-3"></i>
                        <h6 class="mt-2">ROI</h6>
                        <strong>@Model.Resultat.ROI.ToString("F2") %</strong>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="p-3 bg-light rounded shadow-sm">
                        <i class="bi bi-bank text-secondary fs-3"></i>
                        <h6 class="mt-2">ROE</h6>
                        <strong>@Model.Resultat.ROE.ToString("F2") %</strong>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="p-3 bg-light rounded shadow-sm">
                        <i class="bi bi-briefcase-fill text-dark fs-3"></i>
                        <h6 class="mt-2">ROA</h6>
                        <strong>@Model.Resultat.ROA.ToString("F2") %</strong>
                    </div>
                </div>
            </div>

            <hr />

            <div class="alert @((ViewBag.Suggestion?.ToString().Contains("⚠️") ?? false) ? "alert-warning" : "alert-success") mt-3">
                <i class="bi bi-lightbulb-fill me-2"></i>
                <strong>Suggestion :</strong> @ViewBag.Suggestion
            </div>
        </div>
    </div>
}

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
}

