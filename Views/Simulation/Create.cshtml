@model OutilRentabilite.Models.ParametresSimulation
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
    ViewData["Title"] = "Nouvelle simulation";
}

<h2>Nouvelle simulation</h2>

<form id="form-simulation" method="post" class="row g-2 align-items-end mb-3">
    @if (ViewBag.NomProduit != null)
    {
        <div class="alert alert-info">Produit :<strong>@ViewBag.TypeProduit</strong></div>

    }

    <input type="hidden" asp-for="ProduitFinancierId" />
    <div class="col">
        <label>Montant</label>
        <input type="number" name="Montant" class="form-control" required />
    </div>
    <div class="col">
        <label>Durée (mois)</label>
        <input type="number" name="DureeMois" class="form-control" required />
    </div>

    @{
        var typeProduit = ((string)ViewBag.TypeProduit)?.ToLower(); // indiquer le type de produit
    } 
    @if (typeProduit == "crédit")
    {
        <div class="col">
            <label>Nombre de Client estimé</label>
            <input type="number" name="NombreOffre" class="form-control" step="0.01" required />
        </div>

        <div class="col">
            <label>Taux d’intérêt (%)</label>
            <input type="number" name="TauxInteret" class="form-control" step="0.01" required />
        </div>

        <div class="col">
            <label>Frais de dossier (Ar)</label>
            <input type="number" name="FraisDossier" class="form-control" step="100" required />
        </div>
        <div class="col">
            <label>Coût Financement (%)</label>
            <input type="number" name="CoutFinancement" class="form-control" step="0.01" required />
        </div>
        <div class="col">
            <label>Coût Risque (%)</label>
            <input type="number" name="CoutRisque" class="form-control" step="0.01" required />
        </div>
        <div class="col">
            <label>Coût Opérationnel (Ar)</label>
            <input type="number" name="CoutOperationnel" class="form-control" step="100" required />
        </div>
        <div class="col">
            <label>Total actif</label>
            <input type="number" name="TotalActif" class="form-control" value="1000000" required />
        </div>


    }
    @if (typeProduit == "epargne")
    {
        <div class="col">
            <label>Nombre de Client estimé</label>
            <input type="number" name="NombreOffre" class="form-control" step="0.01" required />
        </div>


        <div class="col">
            <label>Taux d’intérêt (%)</label>
            <input type="number" name="TauxInteret" class="form-control" step="0.01" required />
        </div>

        <div class="col">
            <label>Frais de gestion</label>
            <input type="number" name="FraisGestion" class="form-control" step="100" required />
        </div>

    }
    @if (typeProduit == "services")
    {
        <div class="col">
            <label>Coût service client</label>
            <input type="number" name="CoutFinancement" class="form-control" step="0.01" required />
        </div>
        <div class="col">
            <label>Coût IT par opération</label>
            <input type="number" name="CoutOperationnel" class="form-control" step="100" required />
        </div>
        <div class="col">
            <label>Fonds propres (si service)</label>
            <input type="number" name="FondsPropres" class="form-control" step="1000" />
        </div>
    }  
 
    <div class="col">
        <button type="submit" class="btn btn-primary">Simuler</button>
    </div>
</form>
<div id="resultat-container" class="mt-4"></div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#form-simulation').submit(function (e) {
                e.preventDefault();
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("Create", "Simulation")',
                    data: $(this).serialize(),
                    success: function (result) {
                        $('#resultat-container').html(result);
                    },
                    error: function () {
                        $('#resultat-container').html("<div class='alert alert-danger'>Une erreur est survenue lors de la simulation.</div>");
                    }
                });
            });
        });
    </script>
}
